<Page x:Class="ZвукApp.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ZвукApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label FontSize="12" Width="250" Height="25">Логин</Label>
            <TextBox FontSize="15" x:Name="TBLogin" Height="35" Width="250" Margin="2"></TextBox>
            <Label FontSize="12" Width="250" Height="25">Пароль</Label>
            <PasswordBox FontSize="15" x:Name="PBPassword" Height="35" Width="250" Margin="2"></PasswordBox>
            <Button Background="#c0c6c9" IsDefault="True" x:Name="LoginButton" Height="35" Width="250" Margin="26" Content="Войти" Click="LoginButton_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
